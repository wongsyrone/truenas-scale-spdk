#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

include /usr/share/dpkg/architecture.mk
include /usr/share/dpkg/pkg-info.mk

# CFLAGS += -D_FORTIFY_SOURCE=2
export DPDKBUILD_FLAGS="-Dcpu_instruction_set=generic"

DESTDIR=$(CURDIR)/debian/tmp

export PYTHON=python3
export am_cv_python_pythondir=/usr/lib/python3/dist-packages
export am_cv_python_pyexecdir=/usr/lib/python3/dist-packages

confflags = \
	--prefix=/usr \
	--libdir=/usr/lib/x86_64-linux-gnu \
	--with-rdma \
	--with-uring=/usr/lib/x86_64-linux-gnu \
	--with-vfio-user \
	--without-rbd \
	--without-ublk \
	--without-fc \
	--without-fio \
	--without-daos \
	--without-shared \
	--without-iscsi-initiator \
	--without-fuse \
	--without-nvme-cuse \
	--without-raid5f \
	--without-wpdk \
	--without-sma \
	--without-avahi \
	--without-golang \
	--disable-tests \
	--disable-unit-tests \
	--disable-examples

# make distclean fails if not previously configured.  Override.
override_dh_clean:

override_dh_auto_clean:

override_dh_auto_configure:
	./configure $(confflags)

# tests would just fail, they need a proper environment with 389 running et al
override_dh_auto_test:

override_dh_auto_install:
	dh_auto_install --max-parallel=1

override_dh_missing:
	dh_missing --fail-missing

override_dh_fixperms:
	dh_fixperms

%:
	dh $@ --with python3
#		--builddirectory=build
